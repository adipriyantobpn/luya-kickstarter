{
    "name": "luyadev/luya-kickstarter",
    "description": "The kickstarter for a new LUYA application.",
    "type": "project",
    "license":"MIT",
    "require": {
        "luyadev/luya-core" : "1.0.0-RC3",
        "luyadev/luya-module-admin" : "1.0.0-RC3",
        "luyadev/luya-module-cms" : "1.0.0-RC3",
        "luyadev/luya-module-crawler": "1.0.0-RC3",
        "luyadev/luya-module-errorapi": "1.0.0-RC3",
        "luyadev/luya-module-exporter": "1.0.0-RC3",
        "luyadev/luya-module-gallery": "1.0.0-RC3",
        "luyadev/luya-module-news": "1.0.0-RC3",
        "luyadev/luya-module-remoteadmin": "1.0.0-RC3",
        "luyadev/luya-module-styleguide": "1.0.0-RC3",
        "luyadev/luya-module-account": "1.0.0-RC3",
        "luyadev/luya-deployer": "^1.0@dev",
        "luyadev/luya-module-frontendgroup": "1.0.0-RC3",
        "kartik-v/yii2-widgets": "^3.4",
        "kartik-v/yii2-widget-fileinput": "^1.0",
        "kartik-v/yii2-helpers": "^1.3",
        "kartik-v/yii2-detail-view": "^1.7",
        "kartik-v/yii2-dynagrid": "^1.4",
        "kartik-v/yii2-builder": "^1.6",
        "kartik-v/yii2-sortable": "^1.2",
        "kartik-v/yii2-sortable-input": "^1.1",
        "kartik-v/yii2-field-range": "^1.3",
        "kartik-v/yii2-tree-manager": "^1.0",
        "kartik-v/yii2-mpdf": "^1.0",
        "kartik-v/yii2-editable": "^1.7",
        "kartik-v/yii2-nav-x": "^1.2",
        "kartik-v/yii2-popover-x": "^1.3",
        "kartik-v/yii2-checkbox-x": "^1.0",
        "kartik-v/yii2-dropdown-x": "^1.2",
        "kartik-v/yii2-tabs-x": "^1.2",
        "yii2mod/collection": "^1.2",
        "yii2mod/yii2-google-maps-markers": "^1.3",
        "yii2mod/yii2-sweet-alert": "^1.2",
        "yii2mod/yii2-scheduling": "^1.0",
        "yii2mod/yii2-cron-log": "^1.5",
        "yii2mod/yii2-user": "^2.0",
        "yii2mod/yii2-validators": "^1.2",
        "yii2mod/yii2-behaviors": "^1.2",
        "yii2mod/yii2-helpers": "^1.3",
        "yii2mod/yii2-enum": "^1.7",
        "yii2mod/yii2-data-sync-behavior": "^1.3",
        "yii2mod/yii2-link-preview": "^1.3",
        "yii2mod/yii2-array-query": "^1.2",
        "yii2mod/yii2-ftp": "^1.0",
        "yii2mod/yii2-timezone": "^1.0",
        "yii2mod/yii2-gii-extended": "^1.0",
        "dmstr/yii2-adminlte-asset": "^2.4",
        "box/spout": "^2.7",
        "sergeymakinen/yii2-telegram-log": "^2.0",
        "miloschuman/yii2-highcharts-widget": "^5.0",
        "wbraganca/yii2-dynamicform": "^2.0",
        "mootensai/yii2-enhanced-gii": "^1.0",
        "uran1980/yii2-pace-widget": "0.0.2"
    },
    "require-dev": {
        "yiisoft/yii2-gii" : "~2.0.0",
        "yiisoft/yii2-debug" : "~2.0.0"
    },
    "scripts": {
        "post-create-project-cmd": [
            "yii\\composer\\Installer::postCreateProject"
        ]
    },
    "extra": {
        "yii\\composer\\Installer::postCreateProject": {
			"setPermission": [
				{
					"public_html/assets": "0777",
					"public_html/storage": "0777",
					"runtime" : "0777"
				}
			]
		},
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    },
    "config": {
        "fxp-asset" : {
            "pattern-skip-version": "(-build|-patch)",
             "installer-paths": {
                "bower-asset-library": "vendor/bower"
            },
			"vcs-driver-options": {
				"github-no-api": true
			}
        }
    }
}
